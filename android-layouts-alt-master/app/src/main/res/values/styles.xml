<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Blue.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/blue_400</item>
    </style>

    <style name="Chip.Blue" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@android:color/white</item>
        <item name="chipBackgroundColor">@color/colorPrimaryDark</item>
        <item name="iconTint">@android:color/white</item>
        <item name="color">@android:color/white</item>
        <item name="chipStartPadding">8dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Button.Blue.Group" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/btn_group_txt</item>
        <item name="backgroundTint">@color/btn_group_bg</item>
    </style>

    <style name="CardView.White" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CheckBox.Blue" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/grey_80</item>
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="EditText.Blue" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Button.Outlined.White" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
    </style>

</resources>